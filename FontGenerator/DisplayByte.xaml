      x:Name="B1"
      Grid.Row="1"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B2"
      Grid.Row="2"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B3"
      Grid.Row="3"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B4"
      Grid.Row="4"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B5"
      Grid.Row="5"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B6"
      Grid.Row="6"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />

    <Rectangle
      x:Name="B7"
      Grid.Row="7"
      Width="auto"
      Height="auto"
      Fill="YellowGreen"
      MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"
      />


            
    </UniformGrid>
</UserControl>
